<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MLBNewsPlayground" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorSecondary">@color/secondaryColorDark</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MLBNewsPlayground.Headline</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MLBNewsPlayground.Body</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MLBNewsPlayground.Button</item>

        <!-- MaterialCardView style -->
        <item name="materialCardViewStyle">@style/Widget.MLBNewsPlayground.MaterialCardView</item>
    </style>

    <style name="Theme.MLBNewsPlayground" parent="Base.Theme.MLBNewsPlayground" />

    <!-- Custom text appearances -->
    <style name="TextAppearance.MLBNewsPlayground.Headline" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MLBNewsPlayground.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/baseballRed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- MaterialCardView style -->
    <style name="Widget.MLBNewsPlayground.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item> <!-- Set stroke width -->
        <item name="strokeColor">@color/cardStrokeColor</item> <!-- Use the stroke color -->
    </style>

</resources>
